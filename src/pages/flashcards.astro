---
import Layout from '../layouts/Layout.astro';
import { BrainCircuit, Construction } from 'lucide-vue-next';
export const prerender = false;
---

<Layout title="Generate Flashcards">
  <main class="container mx-auto px-4 py-8">
    <h1 class="mb-8 flex items-center gap-2 text-4xl font-bold text-slate-700">
      <BrainCircuit class="h-9 w-9" />
      Flashcards
    </h1>

    <div
      class="flex min-h-[60vh] flex-col items-center justify-center rounded-lg border-2 border-dashed border-slate-300 bg-slate-50 p-8"
    >
      <Construction class="mb-4 h-16 w-16 animate-bounce text-slate-400" />
      <h2 class="mb-2 text-2xl font-semibold text-slate-700">Under Construction</h2>
      <p class="text-center text-slate-600">
        I'm working hard to bring you an amazing flashcard generation experience. <br />
        Please check back soon!
      </p>
      <div class="mt-8 flex gap-3">
        <div class="h-2 w-2 animate-pulse rounded-full bg-slate-400"></div>
        <div class="h-2 w-2 animate-pulse rounded-full bg-slate-400" style="animation-delay: 0.2s"></div>
        <div class="h-2 w-2 animate-pulse rounded-full bg-slate-400" style="animation-delay: 0.4s"></div>
      </div>
    </div>
  </main>
</Layout>
